{
  "name": "your-app",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "bun run dev.js",
    "dev:server": "bun --watch src/server.js",
    "dev:css": "bunx @tailwindcss/cli -i ./public/styles/input.css -o ./public/styles/output.css --watch",
    "build": "bun run build.js",
    "build:css": "bunx @tailwindcss/cli -i ./public/styles/input.css -o ./public/styles/output.css --minify",
    "start": "bun run dist/server.js",
    "clean": "rm -rf ./dist",
    "preview": "bun run build && bun run start"
  },
  "dependencies": {
    "bun": "^1.3.1"
  }
}
